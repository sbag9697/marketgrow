# 환경 설정
NODE_ENV=production
PORT=5001

# MongoDB 설정
MONGODB_URI=mongodb://localhost:27017/marketgrow
# Railway MongoDB URL (배포 시)
# MONGODB_URI=mongodb://mongo:password@mongorailway.railway.internal:27017/marketgrow

# JWT 설정
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 결제 시스템 설정 (비활성화)
# PAYMENT_MID=your-payment-mid
# PAYMENT_SIGN_KEY=your-payment-sign-key
# PAYMENT_API_KEY=your-payment-api-key
# PAYMENT_API_URL=https://payment-api.example.com

# SMM 패널 API 설정
SMM_API_URL=https://smmturk.com/api/v2
SMM_API_KEY=your-smm-api-key

# 이메일 설정 (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS 설정 (CoolSMS)
COOLSMS_API_KEY=your-coolsms-api-key
COOLSMS_API_SECRET=your-coolsms-api-secret
COOLSMS_SENDER=010-0000-0000

# Redis 설정 (캐시)
REDIS_URL=redis://localhost:6379
# Railway Redis URL (배포 시)
# REDIS_URL=redis://default:password@redis.railway.internal:6379

# CORS 설정
CORS_ORIGIN=https://melodious-banoffee-c450ea.netlify.app,http://localhost:3000

# 로깅 설정
LOG_LEVEL=info

# 보안 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# 파일 업로드
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 관리자 계정
ADMIN_EMAIL=admin@marketgrow.com
ADMIN_PASSWORD=Admin123!@#

# 암호화 키
ENCRYPTION_KEY=your-32-character-encryption-key

# 웹훅 URL
WEBHOOK_URL=https://your-domain.com/webhook