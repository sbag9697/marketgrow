# Railway 환경 변수 템플릿
# Railway 대시보드에서 이 변수들을 설정하세요

# 기본 설정
NODE_ENV=production
PORT=5001

# MongoDB Atlas (필수)
# MongoDB Atlas에서 무료 클러스터 생성 후 Connection String 복사
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/marketgrow?retryWrites=true&w=majority

# JWT Secret (필수 - 32자 이상 랜덤 문자열)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# JWT 만료 시간
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 이메일 설정 (Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-character-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_FROM="MarketGrow <noreply@marketgrow.com>"

# SMS 설정 (선택사항 - 없으면 Mock 모드)
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER=01012345678

# 프론트엔드 URL (CORS 설정용)
FRONTEND_URL=https://melodious-banoffee-c450ea.netlify.app
ALLOWED_ORIGINS=https://melodious-banoffee-c450ea.netlify.app,https://marketgrow.netlify.app

# Toss Payments (선택사항)
TOSSPAYMENTS_SECRET_KEY=
TOSSPAYMENTS_CLIENT_KEY=

# 로그 레벨
LOG_LEVEL=info

# 세션 설정
SESSION_SECRET=another-secret-key-for-sessions-change-this

# 레이트 리밋 (분당 요청 수)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 파일 업로드 크기 제한 (MB)
MAX_FILE_SIZE=10

# 관리자 계정 (초기 설정용)
ADMIN_EMAIL=admin@marketgrow.com
ADMIN_PASSWORD=Admin123!@#
ADMIN_USERNAME=admin