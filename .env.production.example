# Production Environment Variables

# Frontend
VITE_API_URL=https://api.marketgrow.com
VITE_APP_NAME=MarketGrow
VITE_TOSSPAYMENTS_CLIENT_KEY=your_production_toss_client_key

# Backend
NODE_ENV=production
PORT=5001

# Database
MONGODB_URI=mongodb+srv://username:password@production-cluster.mongodb.net/marketgrow?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_very_secure_random_string_here
JWT_EXPIRE=30d

# Admin Account
ADMIN_EMAIL=admin@marketgrow.com
ADMIN_PASSWORD=secure_admin_password_here

# Payment
TOSSPAYMENTS_SECRET_KEY=your_production_toss_secret_key
TOSSPAYMENTS_CLIENT_KEY=your_production_toss_client_key

# Email (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
CORS_ORIGIN=https://marketgrow.com,https://www.marketgrow.com

# Monitoring (선택사항)
SENTRY_DSN=your_sentry_dsn_here

# Redis (선택사항 - 세션 관리용)
REDIS_URL=redis://your-redis-url